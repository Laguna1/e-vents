<%= simple_form_for(@event) do |f| %>
          <%= f.error_notification %>

          <div class="field">
            <div class="control">
              <%= f.input :title, required: true, autofocus: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

  <div class="field">
            <div class="control">
             <%= f.input :place, required: true, autofocus: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
             <%= f.input :date, required: true, autofocus: true, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
             <div class="form-actions">
    <%= f.button :submit %>
  </div>
   </div>
          </div>
        <% end %>