<h3>Event#show</h3>
<h1>Event: <%= link_to @event.title %></h1>
    
    <p>Creator: <%= link_to @event.creator.name, user_path(@event.creator) %></p>
    <p>Place: <%= @event.place %></p>
    <p>Date: <%= @event.date %></p>

    <%= link_to 'Join Event', '#', class: "button is-info is-inverted mt-2" %>
    <p>Visitors:  <%= show_attendees(@attendees)  %></p>